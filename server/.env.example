# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ai-trip-planner
REDIS_URL=redis://localhost:6379

# JWT Configuration - CHANGE THESE IN PRODUCTION!
JWT_ACCESS_SECRET=your-super-secure-access-secret-min-256-bits-change-in-production
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-min-256-bits-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Email Service Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=AI Trip Planner <noreply@yourdomain.com>

# Application URLs
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:5000

# Security Configuration
BCRYPT_ROUNDS=14
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000
PASSWORD_HISTORY_LIMIT=5

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production

# Environment
NODE_ENV=development
PORT=5000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# API Keys (Optional)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
STRIPE_SECRET_KEY=your-stripe-secret-key
OPENAI_API_KEY=your-openai-api-key

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=your-ga-id

# File Upload
MAX_FILE_SIZE=10mb
UPLOAD_PATH=uploads/

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Production Settings (uncomment for production)
# NODE_ENV=production
# HTTPS_REDIRECT=true
# TRUST_PROXY=true