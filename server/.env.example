# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/ai-trip-planner

# Application URLs
CLIENT_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Authentication (JWT)
JWT_ACCESS_SECRET=your_super_secure_access_secret_change_in_production
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_change_in_production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
SESSION_SECRET=your_session_secret_change_in_production

# Email Service (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=AI Trip Planner <noreply@yourdomain.com>

# AI Configuration (Google Gemini)
GEMINI_API_KEY=your_gemini_api_key_here

# Logging (Optional)
LOG_LEVEL=info