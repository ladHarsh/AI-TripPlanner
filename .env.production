# Production Environment Variables
NODE_ENV=production
PORT=5000

# Frontend URL
CLIENT_URL=https://your-frontend-domain.vercel.app
ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app

# Database Configuration
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/ai-trip-planner
MONGO_PASSWORD=your_secure_mongo_password

# Redis Configuration
REDIS_URL=redis://username:password@redis-host:port
REDIS_PASSWORD=your_secure_redis_password

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_at_least_32_characters_long
JWT_EXPIRE=7d
BCRYPT_ROUNDS=12

# Payment Processing
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Google Services
GOOGLE_MAPS_API_KEY=your_production_google_maps_api_key
GEMINI_API_KEY=your_production_gemini_api_key
GOOGLE_ANALYTICS_ID=your_google_analytics_id
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# External APIs
AMADEUS_CLIENT_ID=your_amadeus_client_id
AMADEUS_CLIENT_SECRET=your_amadeus_client_secret
BOOKING_COM_API_KEY=your_booking_com_api_key
TRIPADVISOR_API_KEY=your_tripadvisor_api_key
OPENWEATHER_API_KEY=your_openweather_api_key

# Transportation APIs
UBER_CLIENT_ID=your_uber_client_id
UBER_CLIENT_SECRET=your_uber_client_secret
RAIL_EUROPE_API_KEY=your_rail_europe_api_key
BUSBUD_API_TOKEN=your_busbud_api_token

# Email Service
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key
FROM_EMAIL=noreply@aitripplanner.com
FROM_NAME=AI Trip Planner

# Logging and Monitoring
LOG_LEVEL=info
LOGTAIL_TOKEN=your_logtail_token

# Analytics
MIXPANEL_TOKEN=your_mixpanel_token

# Social Authentication
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Push Notifications
FIREBASE_SERVER_KEY=your_firebase_server_key
FIREBASE_PROJECT_ID=your_firebase_project_id

# Security
SESSION_SECRET=your_session_secret
CSRF_SECRET=your_csrf_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_AI_MAX=20
RATE_LIMIT_PAYMENT_MAX=10

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Docker Specific
BACKEND_PORT=5000
FRONTEND_PORT=3000
HTTP_PORT=80
HTTPS_PORT=443
MONGO_PORT=27017
REDIS_PORT=6379

# Monitoring (Optional)
GRAFANA_PASSWORD=your_grafana_admin_password

# Frontend Environment Variables
REACT_APP_API_URL=https://your-backend-domain.herokuapp.com
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
REACT_APP_FIREBASE_CONFIG={"apiKey":"your_api_key","authDomain":"your_project.firebaseapp.com","projectId":"your_project_id"}
REACT_APP_ANALYTICS_ID=your_google_analytics_id
REACT_APP_MIXPANEL_TOKEN=your_mixpanel_token